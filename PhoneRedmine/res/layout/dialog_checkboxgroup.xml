<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogcheckboxgroup_rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp"
    android:paddingTop="24dp" >

    <TextView
        android:id="@+id/dialogcheckboxgroup_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textsize_big_big" >
    </TextView>

    <ScrollView
        android:id="@+id/dialogcheckboxgroup_sc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogcheckboxgroup_title"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp" >

        <LinearLayout
            android:id="@+id/dialogcheckboxgroup_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <include
        android:id="@+id/dialog_bottom"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="48dp"
        android:layout_alignBottom="@+id/dialogcheckboxgroup_sc"
        android:layout_marginBottom="-53dp"
        android:layout_marginTop="5dp"
        layout="@layout/dialog_bottomitem" />

</RelativeLayout>